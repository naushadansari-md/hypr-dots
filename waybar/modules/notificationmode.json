{
  "custom/notificationmode": {
    "format": "{text}",
    "return-type": "json",
    "exec": "~/.config/waybar/scripts/notificationmode.sh 'icon' '' ''",
    "interval": 2,
    "on-click": "~/.config/waybar/scripts/notificationmode.sh 'toggle'",
    "menu": "on-click-right",
    "menu-file": "~/.config/waybar/menus/notifications.xml",
    "menu-actions": {
      "default": "makoctl mode -s default",
      "dnd": "makoctl mode -s do-not-disturb"
    }
  }
}
