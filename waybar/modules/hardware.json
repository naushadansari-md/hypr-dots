{
  "cpu": {
    "interval": 3,
    "format": " {usage:2}%",
    "on-click": "kitty --class FloatTerm -e btop"
  },

  "memory": {
    "interval": 3,
    "format": " {}%",
    "on-click": "kitty --class FloatTerm -e btop"
  },

  "temperature": {
  "interval": 3,
  "thermal-zone": 2,
  "critical-threshold": 70,
  "format": " {temperatureC}°C",
  "format-critical": " {temperatureC}°C",
  "on-click": "kitty --class FloatTerm -e btop"
},

  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": [
      "", "", "", "", "",
      "", "", "", ""
    ],
    "on-scroll-up": "brightnessctl set 1%+",
    "on-scroll-down": "brightnessctl set 1%-",
    "min-length": 6
  },

  "group/hardware": {
    "orientation": "horizontal",
    "modules": [
      "cpu",
      "custom/space",
      "memory",
      "custom/space",
      "temperature",
      "custom/space",
      "backlight"
    ]
  }
}
